<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <title>Admin Dashboard</title>
</head>

<body>
  <div class="container mt-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>Admin Dashboard</h1>
      <a href="/logout" class="btn btn-danger">Logout</a>
    </div>

    <!-- User Management -->
    <div class="row g-3">
      <div class="col-md-4 col-sm-10">
        <a href="/adminHomepage" class="btn btn-primary col-12">View Users</a>
      </div>
      <div class="col-md-2 col-sm-2 px-md-0">
        <a href="/addUser" class="btn btn-success col-12">Add User</a>
      </div>
    </div>

    <!-- User Table -->
    <div class="table-responsive mt-5">
      <h3>User List</h3>
      <table class="table table-bordered">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Role</th>
            <th>Created At</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (data && data.length> 0) { %>
            <% data.forEach((user, index)=> { %>
              <tr>
                <td>
                  <%= index + 1 %>
                </td>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <%= user.firstName %>
                </td>
                <td>
                  <%= user.lastName %>
                </td>
                <td>
                  <%= user.gender==='female' ? 'Female' : 'Male' %>
                </td>
                <td>
                  <%= user.role %>
                </td>
                <td>
                  <%= new Date(user.createdAt).toLocaleString() %>
                </td>
                <td>
                  <a href="/editUser?id=<%= user.id %>" class="btn btn-warning btn-sm">Edit</a>
                  <a href="/deleteUser?id=<%= user.id %>" class="btn btn-danger btn-sm"
                    onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                </td>
              </tr>
              <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="8" class="text-center">No users found</td>
                  </tr>
                  <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>