<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css"
      integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <title>Web Scan</title>
  </head>
  <body>
    <div class="container mt-5">
      <div class="row">
        <form class="row g-3" action="/editUser" method="POST">
          <input type="hidden" name="id" value="<%= data.id %>" />
          <div class="col-md-6">
            <label for="inputFirstName" class="form-label">First Name</label>
            <input
              type="text"
              class="form-control"
              id="inputFirstName"
              name="firstName"
              placeholder="<%= data.firstName %>"
              value="<%= data.firstName %>"
            />
          </div>
          <div class="col-md-6">
            <label for="inputLastName" class="form-label">Last Name</label>
            <input
              type="text"
              class="form-control"
              id="inputLastName"
              name="lastName"
              placeholder="<%= data.lastName %>"
              value="<%= data.lastName %>"
            />
          </div>
          <div class="col-md-6">
            <label for="inputEmail" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="inputEmail"
              name="email"
              placeholder="<%= data.email %>"
              value="<%= data.email %>"
            />
          </div>
          <div class="col-md-3">
            <label for="inputGender" class="form-label">Sex</label>
            <select
              id="inputGender"
              class="form-select"
              name="gender"
              value="<%= data.gender %>"
            >
              <option value="0" <%= data.gender == 0 ? 'selected' : '' %>>Male</option>
              <option value="1" <%= data.gender == 1 ? 'selected' : '' %>>Female</option>
            </select>
          </div>
          <div class="col-md-3">
            <label for="inputRole" class="form-label">Role</label>
            <select id="inputRole" class="form-select" name="role">
              <option value="0" selected>User</option>
            </select>
          </div>
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/homeUser" class="text-muted mx-2">Back</a>
          </div>
        </form>
      </div>
    </div>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
