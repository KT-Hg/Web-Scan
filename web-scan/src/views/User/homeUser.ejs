<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Latest compiled and minified CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css"
      integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <title>Web Scan</title>
  </head>
  <body>
    <div class="container mt-5">
      <a href="/addUser" class="btn btn-primary px-4">Add</a>
      <table class="table mt-5">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Email</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Gender</th>
            <th scope="col">Role</th>
            <th scope="col">Created At</th>
            <th scope="col">Updated At</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% for( let index = 0; index < data.length; index++ ) { %>
          <tr>
            <th scope="row"><%= data[index].id %></th>
            <td><%= data[index].email %></td>
            <td><%= data[index].firstName %></td>
            <td><%= data[index].lastName %></td>
            <td><%= !data.gender ? 'Male' : 'Female' %></td>
            <td><%= data[index].role %></td>
            <td>
              <%= data[index].createdAt.toString().replace(/GMT.*$/, '').trim()
              %>
            </td>
            <td>
              <%= data[index].updatedAt.toString().replace(/GMT.*$/, '').trim()
              %>
            </td>
            <td>
              <a
                href="/editUser?id=<%= data[index].id %>"
                class="btn btn-success"
                >Edit</a
              >
            </td>
            <td>
              <a
                href="/deleteUser?id=<%= data[index].id %>"
                class="btn btn-danger"
                >Delete</a
              >
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
      <a href="/" class="text-muted mx-2">Back</a>
    </div>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
